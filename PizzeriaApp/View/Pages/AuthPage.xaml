<Page x:Class="PizzeriaApp.View.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PizzeriaApp.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">


    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Image Height="80" Source="/Assets/Images/logo.png" Margin="0, 10"></Image>
        <TextBlock HorizontalAlignment="Center" Foreground="#fff">Логин</TextBlock>
        <TextBox x:Name="LoginBox" Width="250" Height="40" />
        <TextBlock HorizontalAlignment="Center" Foreground="#fff">Пароль</TextBlock>
        <TextBox x:Name="PasswordBox"  Width="250" Height="40" />
        <Button x:Name="Authorisation" Background="#6DA973" Foreground="#fff" Width="150" Height="40" Margin="0, 10" Click="AuthorisationClick">Войти</Button>
    </StackPanel>
</Page>
