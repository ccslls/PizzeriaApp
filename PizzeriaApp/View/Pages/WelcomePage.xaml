<Page x:Class="PizzeriaApp.View.Pages.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PizzeriaApp.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WelcomePage">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Foreground="#fff" Margin="0, 10">Добро пожаловать в АРМ "Заказ Пиццы! С чем желаете поработать?</TextBlock>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="ClientButton" Width="150" Height="50" Margin="10" Click="ClientButtonClick">Работа с клиентами</Button>
            <Button x:Name="ProductButton" Width="150" Height="50" Margin="10" Click="ProductButtonClick">Работа с товаром</Button>
        </StackPanel>
    </StackPanel>
</Page>
